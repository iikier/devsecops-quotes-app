# ========================================
# EXEMPLO DE CONFIGURAÇÃO DE VARIÁVEIS
# ========================================
# Copie este arquivo para terraform.tfvars e ajuste os valores

# ========================================
# CONFIGURAÇÕES BÁSICAS
# ========================================
project_name = "devsecops-quotes"
environment  = "dev"
aws_region   = "us-east-1"

# ========================================
# CONFIGURAÇÕES DE REDE
# ========================================
vpc_cidr = "10.0.0.0/16"

public_subnets = [
  "10.0.1.0/24",  # us-east-1a
  "10.0.2.0/24"   # us-east-1b
]

private_subnets = [
  "10.0.10.0/24", # us-east-1a
  "10.0.20.0/24"  # us-east-1b
]

# IMPORTANTE: Substitua pelo seu IP público para maior segurança
# Para descobrir seu IP: curl ifconfig.me
admin_cidr = "0.0.0.0/0"  # ⚠️ ATENÇÃO: Restringir em produção

# ========================================
# CONFIGURAÇÕES DE COMPUTE
# ========================================
instance_type = "t3.micro"  # Elegível para Free Tier

# IMPORTANTE: Substitua pela sua chave pública SSH
# Para gerar: ssh-keygen -t rsa -b 4096 -f ~/.ssh/devsecops-key
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... seu@email.com"

app_port = 3000

# ========================================
# CONFIGURAÇÕES OPCIONAIS
# ========================================
enable_detailed_monitoring = true
backup_retention_days      = 7

# ========================================
# TAGS PERSONALIZADAS (Opcional)
# ========================================
default_tags = {
  Project     = "DevSecOps-Demo"
  ManagedBy   = "Terraform"
  Repository  = "devsecops-quotes-app"
  Team        = "DevSecOps"
  CostCenter  = "Development"
  Owner       = "Seu Nome"
  Contact     = "seu@email.com"
} 